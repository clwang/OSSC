    <% @pending_tasks.each do |task| %>
      <tr>
        <td><%= task.project.name %></td>
        <td><%= task.title %></td>
        <td><%= task.description %></td>
        <td><%= task.point_value %></td>
      </tr>
    <% end %>
    </tbody>
    </table>
  </div>
</div>